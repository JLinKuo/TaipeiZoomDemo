<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/house_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textColor="@color/gray_5"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/house_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/gray_5"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/house_info"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/house_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/gray_5"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/house_memo"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/house_web_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/blue_light"
        android:textSize="14sp"
        android:text="@string/open_web_page"
        app:layout_constraintTop_toBottomOf="@+id/house_memo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_e"
        app:layout_constraintTop_toBottomOf="@+id/house_category"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="32dp"
        android:paddingBottom="20dp"
        android:paddingStart="24dp"
        android:textColor="@color/gray_1"
        android:textSize="20sp"
        android:text="@string/plant_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_web_url"
        />
</androidx.constraintlayout.widget.ConstraintLayout>